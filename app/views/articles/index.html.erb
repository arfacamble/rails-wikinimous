<div class="container">
<h1 class="mt-4">Articles</h1>
<div class="d-flex justify-content-center my-3">
  <%= link_to "New Article", new_article_path, class: "btn btn-success" %>
</div>
<% @articles.each do |article| %>
  <div class="article-card">
    <h2><%= article.title %></h2>
    <p><%= article.content %></p>
    <%= link_to "More", article_path(article), class: "btn btn-info" %>
    <%= link_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </div>
<% end %>
</div>
